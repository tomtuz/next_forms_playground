{
  // Biome - auto imports
  // Prettier - auto formatting, 'tailwind' class sorting
  // Eslint - auto fix lint errors

  // "biome.enabled": true,
  "biome.enabled": false,
  // "editor.defaultFormatter": "esbenp.prettier-vscode",
  "eslint.useFlatConfig": false, // Next.js don't support flat config yet

  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    // biome
    // "source.organizeImports.biome": "explicit",
    // "source.addMissingImports.biome": "explicit",

    // biome fallback
    "source.organizeImports": "explicit",
    "source.addMissingImports": "explicit",
    // "source.removeUnusedImports": "explicit",

    // eslint
    "source.fixAll.eslint": "explicit"
  },

  "editor.defaultFormatter": "esbenp.prettier-vscode",

  "eslint.validate": [
    "typescript",
    "javascript",
    "javascriptreact",
    "typescriptreact"
  ],

  "typescript.preferences.importModuleSpecifier": "project-relative",
  "typescript.preferences.importModuleSpecifierEnding": "minimal",

  // "typescript.preferences.autoImportSpecifierExcludeRegexes": [
  //   "*/lucide-react/*/Link"
  // ],

  // "typescript.preferences.autoImportFileExcludePatterns": ["lucide-react"],
  "typescript.tsdk": "node_modules/typescript/lib",
  "editor.autoIndent": "full",

  "files.associations": {
    "*.css": "tailwindcss"
  }
}
