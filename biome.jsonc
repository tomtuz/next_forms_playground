{
  "$schema": "https://biomejs.dev/schemas/1.9.1/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "files": {
    "ignoreUnknown": true,
    "ignore": [
      "node_modules/**",
      "dist/**",
      "docs/**",
      ".vscode/**",
      "tsconfig.json",
      "tsconfig.node.json",
      "tsconfig.app.json",
      "src/components/cn/ui/**"
    ]
  },
  "formatter": {
    "enabled": false, // used only for auto-imports
    "formatWithErrors": false,
    "ignore": [],
    "attributePosition": "multiline",
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80,
    "lineEnding": "lf"
  },
  "linter": {
    "enabled": false, // (optional)
    "rules": {
      "recommended": true,
      "complexity": {
        "noUselessLoneBlockStatements": "off"
      },
      "suspicious": {
        "noDebugger": "off",
        "noConsoleLog": "off",
        "noExplicitAny": "off",
        "noArrayIndexKey": "off"
      },
      "style": {
        "useImportType": "off"
      },
      "correctness": {},
      "a11y": {
        "useKeyWithClickEvents": "off"
      },
      "security": {
        "noDangerouslySetInnerHtml": "off"
      }
    },
    "ignore": []
  },
  "json": {
    "formatter": {
      "trailingCommas": "none"
    },
    "parser": {
      "allowComments": true,
      "allowTrailingCommas": false
    }
  },
  "vcs": {
    "clientKind": "git",
    "enabled": true,
    "useIgnoreFile": true
  }
}
